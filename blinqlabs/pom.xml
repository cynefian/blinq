		</dependency>

	</dependencies>
	<build>
		<finalName>blinqlabs</finalName>
		<plugins>
		
		<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>3.1.0</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/src/main/resources</outputDirectory>
							<overwrite>true</overwrite>
							<includeEmptyDirs>true</includeEmptyDirs>
							<resources>
								<resource>
									<directory>${basedir}/src/main/resources/properties/${build.env}</directory>
									<filtering>false</filtering>
									<includes>
										<include>application.properties</include>
										<include>application-context.xml</include>
										<include>db.properties</include>
										<include>logback.xml</include>
										<include>sentry.properties</include>
									</includes>
								</resource>
								<resource>
									<directory>${basedir}/src/main/resources/properties</directory>
									<filtering>false</filtering>
									<includes>
										<include>build.version</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>com.google.code.maven-replacer-plugin</groupId>
				<artifactId>replacer</artifactId>
				<version>1.5.3</version>
				<executions>
					<execution>
						<id>versions</id>
						<configuration>
							<phase>initialize</phase>
							<goals>
								<goal>replace</goal>
							</goals>
							<basedir>${basedir}/src/main/resources</basedir>
							<includes>
								<include>build.version</include>
							</includes>
							<replacements>
								<replacement>
									<token>{build.branch}</token>
									<value>${buildBranch}</value>
								</replacement>
								<replacement>
									<token>{vcs.revision}</token>
									<value>${vcs.revision}</value>
								</replacement>
								<replacement>
									<token>{build.env}</token>
									<value>${deploy.env}</value>
								</replacement>
								<replacement>
									<token>{build.version}</token>
									<value>${buildVersion}</value>
								</replacement>
								<replacement>
									<token>{bambooBuildKey}</token>
									<value>${bambooBuildKey}</value>
								</replacement>
								<replacement>
									<token>{bamboo.url}</token>
									<value>${bambooURL}</value>
								</replacement>
								<replacement>
									<token>{bamboo.build.time}</token>
									<value>${buildTime}</value>
								</replacement>
							</replacements>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.7.0</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>3.2.3</version>
				<configuration>
					<webappDirectory>src/main/webapp</webappDirectory>
					<outputDirectory>target/artifacts/war/${build.env}</outputDirectory>
				</configuration>
			</plugin>

		</plugins>
	</build>


</project>
